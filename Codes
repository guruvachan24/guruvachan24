  <main>
    <section class="search-container" aria-label="Search movies">
      <input
        type="search"
        class="search-input"
        placeholder="Search movies..."
        aria-label="Search movies"
        id="movieSearch"
      />
    </section>
    <section aria-live="polite" aria-atomic="true" aria-relevant="additions removals" class="movies-grid" id="moviesGrid" role="list">
      <!-- Movie cards injected dynamically -->
    </section>
  </main>
  <footer>
    &copy; 2024 Modern Movie Explorer. All rights reserved.
  </footer>
  <script>
    // Movies data sample (normally fetched from API)
    const movies = [
      {
        id: 1,
        title: "Inception",
        year: 2010,
        rating: "PG-13",
        genres: ["Action", "Sci-Fi", "Thriller"],
        poster: "https://placehold.co/300x450/png?text=Inception+Poster",
        description: "A thief who steals corporate secrets through use of dream-sharing technology."
      },
      {
        id: 2,
        title: "The Shawshank Redemption",
        year: 1994,
        rating: "R",
        genres: ["Drama"],
        poster: "https://placehold.co/300x450/png?text=Shawshank+Redemption",
        description: "Two imprisoned men bond over a number of years, finding solace and eventual redemption."
      },
      {
        id: 3,
        title: "The Dark Knight",
        year: 2008,
        rating: "PG-13",
        genres: ["Action", "Crime", "Drama"],
        poster: "https://placehold.co/300x450/png?text=The+Dark+Knight",
        description: "Batman faces the Joker, a criminal mastermind who wants to create chaos."
      },
      // Add more movie objects for realism
    ];

    const moviesGrid = document.getElementById('moviesGrid');
    const searchInput = document.getElementById('movieSearch');

    function createMovieCard(movie) {
      const card = document.createElement('article');
      card.className = 'movie-card';
      card.setAttribute('role', 'listitem');
      card.tabIndex = 0;
      
      card.innerHTML = `
        <img class="movie-poster" src="${movie.poster}" alt="Poster of movie: ${movie.title}" />
        <div class="movie-content">
          <h2 class="movie-title">${movie.title} (${movie.year})</h2>
          <p class="movie-info">${movie.description}</p>
          <p class="movie-genres">${movie.genres.join(', ')}</p>
        </div>
      `;
      return card;
    }

    function displayMovies(movieList) {
      moviesGrid.innerHTML = '';
      if (movieList.length === 0) {
        const noResults = document.createElement('p');
        noResults.textContent = "No movies found.";
        noResults.style.textAlign = "center";
        noResults.style.gridColumn = "1 / -1";
        moviesGrid.appendChild(noResults);
        return;
      }
      movieList.forEach(movie => {
        moviesGrid.appendChild(createMovieCard(movie));
      });
    }

    // Initial display
    displayMovies(movies);

    // Search functionality
    searchInput.addEventListener('input', () => {
      const query = searchInput.value.toLowerCase().trim();
      const filteredMovies = movies.filter(movie => {
        return (
          movie.title.toLowerCase().includes(query) ||
          movie.genres.some(genre => genre.toLowerCase().includes(query))
        );
      });
      displayMovies(filteredMovies);
    });
  </script>
</body>
