ðŸ¥‹ Full Animated Fight Code (HTML + CSS + JavaScript in one)

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Animated Fight Scene</title>
  <style>
    body {
      margin: 0;
      background: linear-gradient(to bottom, #111, #333);
      font-family: sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .stage {
      width: 800px;
      height: 400px;
      position: relative;
      border: 2px solid #fff;
      background: radial-gradient(#222, #000);
      overflow: hidden;
    }

    .fighter {
      width: 80px;
      height: 150px;
      background: gray;
      position: absolute;
      bottom: 50px;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      transition: transform 0.3s;
    }

    .red {
      left: 100px;
      background: crimson;
    }

    .blue {
      right: 100px;
      background: royalblue;
    }

    .arm {
      width: 20px;
      height: 60px;
      background: #eee;
      margin-top: 20px;
    }

    .punch {
      animation: punch 1s infinite;
      transform-origin: top left;
    }

    .block {
      transform: rotate(30deg);
    }

    @keyframes punch {
      0% { transform: rotate(0deg); }
      50% { transform: rotate(45deg); }
      100% { transform: rotate(0deg); }
    }

    .action-text {
      position: absolute;
      top: 10px;
      width: 100%;
      text-align: center;
      color: #fff;
      font-size: 28px;
      animation: flash 1s infinite alternate;
    }

    @keyframes flash {
      from { opacity: 1; }
      to { opacity: 0.4; }
    }

    .hit {
      position: absolute;
      font-size: 24px;
      color: yellow;
      animation: hitAnim 0.5s ease-out;
    }

    @keyframes hitAnim {
      0% { transform: scale(1); opacity: 1; }
      100% { transform: scale(1.5); opacity: 0; }
    }

    button {
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      background: #fff;
      border-radius: 5px;
    }

    button:hover {
      background: #ccc;
    }
  </style>
</head>
<body>

<div class="stage">
  <div class="action-text">ðŸ”¥ Fight Begins! ðŸ”¥</div>

  <div class="fighter red" id="fighter1">
    <div class="arm left"></div>
    <div class="arm right" id="punch1"></div>
  </div>

  <div class="fighter blue" id="fighter2">
    <div class="arm left block"></div>
    <div class="arm right"></div>
  </div>

  <div id="hitEffect" class="hit" style="display:none;">ðŸ’¥</div>
  <button onclick="punch()">Red Punch!</button>
</div>

<script>
  function punch() {
    const punchArm = document.getElementById("punch1");
    const blueFighter = document.getElementById("fighter2");
    const hit = document.getElementById("hitEffect");

    // Trigger punch animation
    punchArm.classList.add("punch");

    // Move blue fighter slightly back
    blueFighter.style.transform = "translateX(20px)";

    // Show hit effect
    hit.style.left = "600px";
    hit.style.top = "180px";
    hit.style.display = "block";

    setTimeout(() => {
      punchArm.classList.remove("punch");
      blueFighter.style.transform = "translateX(0)";
      hit.style.display = "none";
    }, 500);
  }
</script>

</body>
</html>


